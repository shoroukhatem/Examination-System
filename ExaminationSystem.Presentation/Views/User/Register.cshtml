@using ExaminationSystem.Core.Features.User.Commands.Models
@model AddUserCommandDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/css/Register/style.css">
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="POST" class="register-form" id="register-form" asp-controller="User" asp-action="Register">
                            <div class="form-group">
                                <label asp-for="@Model.Name" for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="@Model.Name" type="text" name="name" id="name" placeholder="Your Name" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.UserName" for="User Name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="@Model.UserName" type="text" name="UserName" id="name" placeholder="Your User Name" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Email" for="email"><i class="zmdi zmdi-email"></i></label>
                                <input asp-for="@Model.Email" type="email" name="email" id="email" placeholder="Your Email" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Password" for="password"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="@Model.Password" type="password" name="password" id="pass" placeholder="Password" />
                            </div>
                            <div class="form-group">
                                <label for="confirmpassword" asp-for="@Model.ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input asp-for="@Model.ConfirmPassword" type="password" name="confirmpassword" id="re_pass" placeholder="Repeat your password" />
                            </div>
                            <div class="form-group">
                               <label  for="Who You Are"></label> 
                                <select asp-for="@Model.RoleName" asp-items="@Model.Roles">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input asp-for="@Model.IsAgree" type="checkbox" name="IsAgree" id="agree-term" class="agree-term" />
                                <label asp-for ="@Model.IsAgree" for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="\Images\Register&SignIn images\signup-image.jpg" alt="sing up image"></figure>
                        <a href="#" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>



    </div>

    <!-- JS -->
    <script src="\lib\jquery\"></script>
    <script src="/js/site.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>

@using ExaminationSystem.Core.Features.Exams.Commands.Models

@model AddExamCommand
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
   /* TempData["TeacherId"] = @Model.TeacherId;
    TempData["SubjectId"] = @Model.SubjectId;*/
}

<h1>Create</h1>

<form class="row g-3" asp-controller="Exams" asp-action="Create">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-4">
        <label asp-for="@Model.Name" for="validationDefault02" class="form-label">Name</label>
        <input type="text" asp-for="@Model.Name" class="form-control" id="validationDefault02" required>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div> 
    <div class="col-md-4">
        <label asp-for="@Model.StartTime" for="validationDefault02" class="form-label">StartTime</label>
        <input type="datetime-local" asp-for="@Model.StartTime" id="StartTime" name="StartTime" class="form-control" required>
        <span asp-validation-for="@Model.StartTime" class="text-danger"></span>
    </div>
     <div class="col-md-4">
        <label asp-for="@Model.EndTime" for="validationDefault02" class="form-label">EndTime</label>
        <input type="datetime-local" asp-for="@Model.EndTime" id="EndTime" name="EndTime" class="form-control" required>
        <span asp-validation-for="@Model.EndTime" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="@Model.Duration" for="validationDefault02" class="form-label">Duration</label>
        <input type="number" asp-for="@Model.Duration" class="form-control" id="validationDefault02" required>
        <span asp-validation-for="@Model.Duration" class="text-danger"></span>
    </div> 
    <div class="col-md-4">
        <label asp-for="@Model.NumberOfQuestions" for="validationDefault02" class="form-label">Number Of Questions</label>
        <input type="number" asp-for="@Model.NumberOfQuestions" class="form-control" id="validationDefault02" required>
        <span asp-validation-for="@Model.NumberOfQuestions" class="text-danger"></span>
    </div> 
    <div class="col-md-4">
        <label asp-for="@Model.FullMark" for="validationDefault02" class="form-label">FullMark</label>
        <input type="number" asp-for="@Model.FullMark" class="form-control" id="validationDefault02" required>
        <span asp-validation-for="@Model.FullMark" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="@Model.SubjectId" value="@Model.SubjectId" class="form-control" id="validationDefault02" required>
    <input type="hidden" asp-for="@Model.TeacherId" value="@Model.TeacherId" class="form-control" id="validationDefault02" required>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Create</button>
        <a asp-controller="Subject" asp-action="Exams" class="btn btn-light"> Back To List</a>
    </div>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

